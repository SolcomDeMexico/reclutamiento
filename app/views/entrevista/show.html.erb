<center><p id="notice"><%= notice %></p></center>
<h3>Detalles de la entrevista</h3>
<%= render 'botones_show'%>
<br/>
<p>
  <b>Solicitud:</b>
  <%= link_to @entrevistum.solicitud.nombre, @entrevistum.solicitud %>
</p>

<p>
  <b>Fecha:</b>
 <%= "%02d" % @entrevistum.fecha.day %>/<%= meses[@entrevistum.fecha.month-1] %>/<%= @entrevistum.fecha.year%>-<%= "%02d" % calcularHora(@entrevistum.fecha.hour) %>:<%= "%02d" % @entrevistum.fecha.min%>
</p>

<p>
  <b>Entrevistador:</b>
  <%= link_to @entrevistum.usuario.display_name, @entrevistum.usuario %>
</p>

<p>
  <b>Ubicación:</b>
  <%= @entrevistum.ubicacion%>
</p>

<p>
  <b>Calificación:</b>
  <%= @entrevistum.calificacion%>
</p>

<p>
  <b>Comentarios:</b>
  <%= @entrevistum.comentarios %>
</p>
<p>
  <b>Estatus:</b>
  <%= @entrevistum.estatus %>
</p>


<hr/>
<h5>Información del sistema</h5>
<p>
  <b>Creado por:</b>
  <%= link_to @usuario_crea.display_name, @usuario_crea %> -  <%= "%02d" % @entrevistum.created_at.day %>/<%= meses[@entrevistum.created_at.month-1] %>/<%= @entrevistum.created_at.year %> - <%= "%02d" % calcularHora(@entrevistum.created_at.hour) %>:<%= "%02d" % @entrevistum.created_at.min %>:<%= "%02d" % @entrevistum.created_at.sec %>
</p>
<p>
  <b>Actualizado por:</b>
  <%= link_to @usuario_actualiza.display_name , @usuario_actualiza %> -  <%= "%02d" % @entrevistum.updated_at.day %>/<%= meses[@entrevistum.updated_at.month-1] %>/<%= @entrevistum.updated_at.year %> - <%= "%02d" % calcularHora(@entrevistum.updated_at.hour) %>:<%= "%02d" % @entrevistum.updated_at.min %>:<%= "%02d" % @entrevistum.updated_at.sec %>
</p>

<%= render 'botones_show'%>