<div data-role="header">
  <h1>Editar Vacante</h1>
  <%= link_to 'Regresar', vacante_path(@vacante), "data-icon" => "arrow-l" %>
</div>
<div data-role="content">
<p>
  <b>Nombre:</b>
  <%= @vacante.nombre %>
</p>
<%= form_for(@vacante, :html => { :id => "forma_vacante" })  do |f| %>
<div class="field">
  <%= f.label :candidato_contratado %><br />
  <%= f.collection_select(:usuario_id, @vacante.candidatos, :id , :nombre, options = {:prompt => "NingÃºn candidato fue contratado"})  %>
  <%= f.hidden_field :estatus, :value => 'Cerrada' %>
  <%= f.hidden_field :fecha_cierre_reclutamiento, :value => Date.today %>
</div>
<div>
<%= f.submit "Cerrar Vacante",  "data-theme" => "b",  "data-inline" => "true"%>
</div>
<% end %>

</div>
