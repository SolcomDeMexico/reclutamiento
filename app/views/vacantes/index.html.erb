<% @vacantes.each do |vacante| %>
  <tr>
    <td><%= link_to vacante.nombre, vacante %></td>
    <td><%= vacante.tipo %></td>
    <td><%= vacante.area.nombre %></td>
    <td><%= vacante.estatus %></td>
    <td><%= "%02d" % vacante.fecha_inicio_reclutamiento.day %>/<%= meses[vacante.fecha_inicio_reclutamiento.month-1] %>/<%= vacante.fecha_inicio_reclutamiento.year %></td>
  </tr>
<% end %>

</table>

<br />

<% if permitted_to? :create, Vacante.new %>
<%= link_to 'Nueva vacante', new_vacante_path, :class => "primary button" %>
<% end %>
