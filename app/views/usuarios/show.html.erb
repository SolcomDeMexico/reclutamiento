<center><p id="notice"><%= notice %></p></center>

<h3>Detalles del usuario</h3>

<%= render 'botones_show' %>
<br/>
<p>
  <center><% if !@usuario.foto_file_name.blank? %>
    <%= image_tag(@usuario.foto.url(:thumb)) %>
    <% else %>
    <%= image_tag("default.png") %>
    <% end %>
</center>
</p>
<p>
  <b>Nombre:</b>
  <%= @usuario.display_name %>
</p>

<p>
  <b>Email:</b>
  <%= @usuario.email %>
</p>

<p>
  <b>Departamento:</b>
  <% if !@usuario.departamento_id.nil? %>
  <%= link_to @departamento.nombre, @departamento %>
  <% end %>
</p>

<p>
  <b>Área:</b>
  <% if !@usuario.departamento_id.nil? %>
  <%= link_to @departamento.area.nombre, @departamento.area %>
  <% end %>
</p>

<p>
  <b>Rol:</b>
  <%= @usuario.role.to_s.humanize %>
</p>

<p>
  <b>Habilidades:</b>
  <%= @usuario.habilidades %>
</p>

<%= render 'botones_show' %>
<br/>
<hr/>
<h5>Información del sistema</h5>
<p>
  <b>Creado en:</b>
   <%= "%02d" % @usuario.created_at.day %>/<%= meses[@usuario.created_at.month-1] %>/<%= @usuario.created_at.year %> - <%= "%02d" % calcularHora(@usuario.created_at.hour) %>:<%= "%02d" % @usuario.created_at.min %>:<%= "%02d" % @usuario.created_at.sec %>
</p>
<p>
  <b>Actualizado por:</b>
  <%= link_to @usuario_actualiza.display_name , @usuario_actualiza %> -  <%= "%02d" % @usuario.updated_at.day %>/<%= meses[@usuario.updated_at.month-1] %>/<%= @usuario.updated_at.year %> - <%= "%02d" % calcularHora(@usuario.updated_at.hour) %>:<%= "%02d" % @usuario.updated_at.min %>:<%= "%02d" % @usuario.updated_at.sec %>
</p>